<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/semi_oval"
                android:backgroundTint="#FBF3ED"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="恭喜!"
                    android:textColor="@color/Second"
                    android:textSize="48dp"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="完成運動目標"
                    android:textColor="@color/Second"
                    android:textSize="32dp"
                    android:layout_gravity="center"/>
            </LinearLayout>

        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="60dp"
                android:paddingRight="60dp"
                android:layout_marginBottom="80dp">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:background="@drawable/sport_finished_rectangle"/>

                <View
                    android:layout_width="250dp"
                    android:layout_height="2dp"
                    android:background="@color/Second"
                    android:layout_marginTop="60dp"
                    android:layout_gravity="top|center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="12dp"
                    android:textSize="24dp"
                    android:backgroundTint="@color/Yellow"
                    android:textColor="@color/Second"
                    android:text="運動紀錄"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="95dp"
                    android:orientation="vertical"
                    android:paddingLeft="30dp"
                    android:paddingRight="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="15dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="20dp"
                            android:background="@color/white"
                            android:src="@drawable/down"
                            app:tint="@color/Second" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="運動項目："
                            android:textColor="@color/Second"
                            android:textSize="18dp"/>
                        <TextView
                            android:id="@+id/sport_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="手肘碰膝蓋"
                            android:textColor="@color/Second"
                            android:textSize="18dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="15dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="20dp"
                            android:background="@color/white"
                            android:src="@drawable/down"
                            app:tint="@color/Second" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="運動時間："
                            android:textColor="@color/Second"
                            android:textSize="18dp"/>
                        <TextView
                            android:id="@+id/sport_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="30"
                            android:paddingTop="5px"
                            android:textColor="@color/Second"
                            android:textSize="18dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="秒"
                            android:paddingLeft="20px"
                            android:textColor="@color/Second"
                            android:textSize="18dp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="15dp">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="20dp"
                            android:background="@color/white"
                            android:src="@drawable/down"
                            app:tint="@color/Second" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="完成時間：30 秒"
                            android:textColor="@color/Second"
                            android:textSize="18dp"/>
                        <TextView
                            android:id="@+id/finish_goal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text=""
                            android:textColor="@color/Second"
                            android:textSize="18dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="15dp">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="20dp"
                            android:background="@color/white"
                            android:src="@drawable/down"
                            app:tint="@color/Second" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="消耗"
                            android:textColor="@color/Second"
                            android:textSize="18dp"/>
                        <TextView
                            android:id="@+id/consume_calorie"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="100"
                            android:paddingTop="5px"
                            android:textColor="@color/Second"
                            android:textSize="18dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="卡路里"
                            android:textColor="@color/Second"
                            android:textSize="18dp"/>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/Second"
                        android:layout_marginTop="20dp"/>
                </LinearLayout>

            </FrameLayout>

            <Button
                android:id="@+id/back_to_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回主頁"
                android:textSize="24dp"
                android:textColor="@color/white"
                android:layout_gravity="bottom|center_horizontal"/>
        </LinearLayout>

    </LinearLayout>




</LinearLayout>