<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sport.SportDetectionActivity"
    android:orientation="vertical"
    android:padding="20dp">

    <ImageView
        android:id="@+id/sport_detection_animation"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/sport_detection_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Second"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/sport_detection_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Second"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/sport_detection_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Second"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/sport_detection_text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Second"
        android:layout_marginBottom="10dp"/>
</LinearLayout>