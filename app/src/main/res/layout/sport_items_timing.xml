<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:background="@drawable/windows"
        android:padding="20dp">
        <TextView
            android:id="@+id/sport_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Second"
            android:textSize="24dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="伏地挺身"/>

        <ImageView
            android:id="@+id/animate"
            android:layout_width="match_parent"
            android:layout_height="120dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="手掌撐住地板，腳尖著地，身體向下時手臂彎曲，上下來回算一次"
            android:textColor="@color/Second"
            android:textSize="14dp"
            tools:ignore="TextSizeCheck" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="運動模式選擇"
            android:textAlignment="center"
            android:textColor="@color/Second"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:gravity="center">

            <Button
                android:id="@+id/lastingBtn"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:background="@drawable/button_sport_mode"
                android:text="計時"
                android:backgroundTintMode="multiply"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/timesBtn"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:background="@drawable/button_sport_mode"
                app:backgroundTint="@color/Yellow"
                android:drawableTintMode="multiply"
                android:text="計次"
                android:textColor="@color/Second"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="10dp">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="65dp"
                    android:background="@drawable/rectangle"
                    app:backgroundTint="@color/Yellow"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="start|center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="時間"
                        android:textColor="@color/Second"
                        android:layout_marginLeft="28dp"
                        android:layout_marginRight="70dp"
                        android:layout_gravity="start|center_vertical"/>
                    <ImageButton
                        android:id="@+id/minusBtn"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/baseline_remove_24"
                        android:background="@drawable/button_sport_mode"
                        android:layout_gravity="start|center_vertical"
                        app:tint="@color/Second" />

                    <TextView
                        android:id="@+id/setting_time"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:layout_gravity="start|center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@color/Yellow" />
                    <ImageButton
                        android:id="@+id/plusBtn"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/baseline_add_24"
                        app:tint="@color/Second"
                        android:background="@drawable/button_sport_mode"
                        android:layout_gravity="start|center_vertical"/>

                </LinearLayout>
            </FrameLayout>

        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:text="確定"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout >