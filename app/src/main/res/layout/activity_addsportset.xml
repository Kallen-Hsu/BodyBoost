<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/Lavender"/>
        <Button
            android:id="@+id/back"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:drawableLeft="@drawable/baseline_arrow_back_ios_new_24"
            android:drawableTint="@color/white"
            android:backgroundTint="@color/Lavender"
            android:elevation="0dp"
            android:stateListAnimator="@null" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:stateListAnimator="@null"
            android:backgroundTint="@color/Lavender"
            android:drawableRight="@drawable/baseline_more_vert_24" />
    </FrameLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:text="新增運動組合"
            android:textAlignment="center"
            android:textColor="@color/Second"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="270dp"
                android:layout_height="130dp"
                android:background="@drawable/rectangle"
                app:backgroundTint="@color/Yellow"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="組合名稱"
                        android:textColor="@color/Second"/>
                    <EditText
                        android:id="@+id/enter_account"
                        android:layout_width="145dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:drawablePadding="2dp"
                        android:background="@color/white"
                        android:inputType="text"
                        android:layout_marginLeft="15dp"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="start|center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="休息時間"
                        android:textColor="@color/Second"
                        android:layout_marginLeft="28dp"
                        android:layout_marginRight="70dp"
                        android:layout_gravity="start|center_vertical"/>
                    <ImageButton
                        android:id="@+id/minusBtn"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:tint="@color/Second"
                        android:src="@drawable/baseline_remove_24"
                        android:background="@drawable/button_sport_mode"
                        android:layout_gravity="start|center_vertical"/>

                    <TextView
                        android:id="@+id/setting_time"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:layout_gravity="start|center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@color/white" />
                    <ImageButton
                        android:id="@+id/plusBtn"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/baseline_add_24"
                        app:tint="@color/Second"
                        android:background="@drawable/button_sport_mode"
                        android:layout_gravity="start|center_vertical"/>
                    </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="錄製運動影片"
                        android:textColor="@color/Second"/>
                    <Switch
                        android:id="@+id/notification_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginLeft="20dp"
                        android:thumb="@drawable/switch_thumb"
                        android:track="@drawable/switch_track"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="運動項目列表"
        android:layout_marginTop="20dp"
        android:textSize="14dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/Second"/>


</LinearLayout>