<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FoodTypeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:layout_marginTop="130dp"
        android:gravity="center"
        android:orientation="vertical">

        <ListView
            android:id="@+id/customListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@android:color/transparent"
            android:dividerHeight="10sp"
            android:scrollbars="vertical"
            tools:listitem="@layout/list_item" />
    </LinearLayout>

    <TextView
        android:id="@+id/noFood"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="105dp"
        android:padding="10dp"
        android:gravity="center"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/TextColor"
        android:textSize="25sp" />

    <Spinner
        android:id="@+id/spinner_type"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="70dp"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/spinner_back"
        android:padding="10dp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@color/Lavender"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/search_food"
        android:textColor="@color/white"
        android:textSize="24sp"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/back"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:backgroundTint="@color/Lavender"
        android:drawableLeft="@drawable/baseline_arrow_back_ios_new_24"
        android:drawableTint="@color/white"
        android:elevation="0dp"
        android:stateListAnimator="@null"
        tools:ignore="RtlHardcoded,SpeakableTextPresentCheck" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_food_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="25dp"
        android:backgroundTint="@color/white"
        android:importantForAccessibility="no"
        android:src="@drawable/options_icon"
        android:verticalScrollbarPosition="defaultPosition"
        tools:ignore="ImageContrastCheck" />

</FrameLayout>