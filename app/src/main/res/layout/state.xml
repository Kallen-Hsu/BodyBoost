<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="800dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="220dp"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp"
            android:background="#fff1e5">

            <TextView
                android:id="@+id/sport_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="深蹲"
                android:background="@drawable/sport_camera_title"
                android:paddingHorizontal="15dp"
                android:paddingVertical="5dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="時間"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp" />

            <Chronometer
                android:id="@+id/timer"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@drawable/sport_camera_subtitle"
                android:paddingHorizontal="15dp"
                android:paddingVertical="5dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="動作判別"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/sportClass"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text=""
                android:background="@drawable/sport_camera_subtitle"
                android:paddingHorizontal="15dp"
                android:paddingVertical="5dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="center_horizontal"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/sport_detection_animation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/finishSportBtn"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:scaleType="fitCenter"
            android:background="@drawable/sport_camera_title"
            android:src="@drawable/exit"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            />
    </LinearLayout>

</LinearLayout>
