<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Setting.EditFragment"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    android:background="@color/white">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:background="@color/Second"
            android:padding="10dp"
            android:text="@string/edit_personal_info"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="TextContrastCheck" />

    </FrameLayout>


    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:contentDescription="@string/picture"
        app:tint="@color/Second"
        card_view:srcCompat="@drawable/baseline_add_a_photo_24"
        tools:ignore="ImageContrastCheck"
        android:background="@drawable/circle"/>

    <LinearLayout
        android:layout_width="322dp"
        android:layout_height="450dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp">
        <TextView
            android:id="@+id/vip"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custom_edittext"
            android:backgroundTint="@color/Yellow"
            android:text="@string/pro"
            android:textSize="18sp"
            android:paddingTop="10dp"
            android:textAlignment="center"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/custom_edittext"
            android:backgroundTint="@color/Lavender"
            android:drawablePadding="2dp"
            android:padding="12dp"
            android:text="@string/id"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="18sp"
            tools:ignore="TextSizeCheck"
            app:drawableLeftCompat="@drawable/baseline_person_24" />


        <TextView
            android:id="@+id/mail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:autofillHints=""
            android:background="@drawable/custom_edittext"
            android:backgroundTint="@color/Lavender"
            android:drawablePadding="2dp"
            android:padding="12dp"
            android:text="@string/email"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="18sp"
            tools:ignore="TextSizeCheck"
            app:drawableLeftCompat="@drawable/baseline_mail_24" />
        <Button
            android:id="@+id/pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:autofillHints=""
            android:background="@drawable/custom_edittext"
            android:backgroundTint="@color/Lavender"
            android:drawablePadding="2dp"
            android:padding="12dp"
            android:text="修改密碼"
            android:textAlignment="viewStart"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="18dp"
            tools:ignore="TextSizeCheck" />
        <Button
            android:id="@+id/bmi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:autofillHints=""
            android:background="@drawable/custom_edittext"
            android:backgroundTint="@color/Lavender"
            android:drawablePadding="2dp"
            android:padding="12dp"
            android:text="修改BMI"
            android:textAlignment="viewStart"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="18dp"
            tools:ignore="TextSizeCheck" />

    </LinearLayout>


</LinearLayout>

</ScrollView>
